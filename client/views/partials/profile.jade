.row.center.middle
	.panel.panel-signin.column-6--hand

		h1 Change Password

		form(name="form", ng-submit="changePassword(form)", novalidate="")

			.form-group
				label Current Password
				input(type="password", name="password", ng-model="user.oldPassword", mongoose-error="")
				p.has-error(ng-show="form.password.$error.mongoose")
					| {{ errors.other }}

			.form-group
				label New Password
				input(type="password", name="newPassword", ng-model="user.newPassword", ng-minlength="3", required="")
				p.has-error(ng-show="(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || submitted)")
					| Password must be at least 3 characters.

			.form-group.has-error
				p {{ errors.other }}

			p.has-error {{ message }} 

			button.button.button-large(type="submit") Save changes