nav.navbar(ng-controller="NavbarCtrl")

	img.navbar-logo(src="images/icon.png")

	ul.navbar-list
		li.navbar-list-item(ng-repeat="item in menu", ng-class="{active: isActive(item.link)}")
			a(ng-href="{{item.link}}", data-ng-bind="item.title")
		li.navbar-list-item(ng-hide="currentUser", ng-class="{active: isActive('/login')}")
			a(href="/login") Login
		li.navbar-list-item(ng-hide="currentUser", ng-class="{active: isActive('/signup')}")
			a(href="/signup") Sign up
		li.navbar-list-item(ng-show="currentUser", ng-class="{active: isActive('/logout')}")
			a(href="", ng-click="logout()") Logout